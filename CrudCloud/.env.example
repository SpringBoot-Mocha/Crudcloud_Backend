# CrudCloud Backend - Environment Variables Example
# Copy this file to .env.local for local development or set these as environment variables in production
# NOTE: This file should NOT contain sensitive data.. Replace values with your own.

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=jdbc:postgresql://91.98.225.17:5432/CrudCloud
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# ============================================================================
# JWT CONFIGURATION (CRITICAL - CHANGE IN PRODUCTION)
# ============================================================================
# Base64 encoded secret key for signing JWT tokens
# Generate with: openssl rand -base64 32 | base64
JWT_SECRET=your_base64_encoded_secret_key_min_32_chars_here_change_in_production
# Token expiration in milliseconds (default: 86400000 = 24 hours)
JWT_EXPIRATION=86400000

# ============================================================================
# MERCADO PAGO CONFIGURATION (Optional - for payments)
# ============================================================================
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_token_here
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here

# ============================================================================
# SSH CONFIGURATION (VPS Connection)
# ============================================================================
SSH_HOST=91.98.225.17
SSH_PORT=22
SSH_USERNAME=root
SSH_PASSWORD=your_ssh_password_here
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_CONNECTION_TIMEOUT=30000
SSH_READ_TIMEOUT=30000

# ============================================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_gmail_app_password_here
MAIL_FROM=noreply@crudcloud.com
MAIL_FROM_NAME=CrudCloud

# ============================================================================
# OAUTH CONFIGURATION (Google and GitHub)
# ============================================================================
# Google OAuth - Get from: https://console.cloud.google.com/
# Format: {number}-{alphanumeric}.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here

# GitHub OAuth - Get from: https://github.com/settings/developers
# Create an OAuth App and obtain the credentials
GITHUB_OAUTH_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_OAUTH_CLIENT_SECRET=your_github_oauth_client_secret_here_never_commit

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Server port
SERVER_PORT=8080
# Provisioning enabled for database instance creation
PROVISIONING_ENABLED=true
